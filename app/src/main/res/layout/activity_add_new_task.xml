<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_add_item"
    tools:context=".AddNewTaskActivity">


    <EditText
        android:id="@+id/TaskNameTxt"
        android:layout_width="317dp"
        android:layout_height="65dp"
        android:layout_marginTop="62dp"
        android:backgroundTint="#FDFDFD"
        android:ems="10"

        android:inputType="textPersonName"
        android:singleLine="false"
        android:text="TaskName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFDFD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.009" />

    <EditText
        android:id="@+id/NoteTxt"
        android:layout_width="329dp"
        android:layout_height="61dp"
        android:layout_marginTop="62dp"
        android:backgroundTint="#FDFDFD"
        android:ems="10"
        android:singleLine="false"
        android:text="Note"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFDFD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.138" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="74dp"
        android:layout_height="50dp"
        android:layout_marginTop="72dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_mic"

        />

    <Button
        android:id="@+id/addItemBtnToDb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00502A2A"
        android:backgroundTint="#000000"

        android:text="AddIItem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.355" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="190dp"
        android:layout_height="64dp"
        android:layout_marginTop="88dp"
        android:background="@color/Secondary_dark"
        android:text="Set Reminder"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/addItemBtnToDb"
        app:layout_constraintStart_toStartOf="@+id/addItemBtnToDb"
        app:layout_constraintTop_toBottomOf="@+id/addItemBtnToDb" />
</androidx.constraintlayout.widget.ConstraintLayout>